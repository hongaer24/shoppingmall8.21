    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_header1"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:background="@drawable/welcomapp">


            <ImageButton
                android:id="@+id/ib_user_icon_avator1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/touxiang" />

            <TextView
                android:id="@+id/tv_username1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="130dp"
                android:text="登录/注册"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#11000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的订单"
                android:textSize="18dp"
                android:textColor="#99000000" />

            <TextView
                android:id="@+id/tv_all_order1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/home_arrow_right"
                android:text="查看全部订单"
                android:textColor="#99000000" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#11000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_user_pay1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/new_order_status_fukuan"
                android:gravity="center"
                android:text="待付款"
                android:textColor="#99000000" />

            <TextView
                android:id="@+id/tv_doing_pay1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/new_order_status_fahuo"
                android:gravity="center"
                android:text="生产中"
                android:textColor="#99000000" />

            <TextView
                android:id="@+id/tv_user_receive1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/new_order_status_shouhuo"
                android:gravity="center"
                android:text="待收货"
                android:textColor="#99000000" />

            <TextView
                android:id="@+id/tv_user_finish1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/icon_order_status_finish"
                android:gravity="center"
                android:text="待评价"
                android:textColor="#99000000" />

            <TextView
                android:id="@+id/tv_user_drawback1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/new_order_status_help"
                android:gravity="center"
                android:text="售后/退款"
                android:textColor="#99000000" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#11000000" />

        <TextView
            android:layout_marginLeft="8dp"
            android:padding="5dp"
            android:textSize="18dp"
            android:id="@+id/tv_user_location1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:drawableRight="@drawable/home_arrow_right"
            android:drawablePadding="295dp"
            android:text="设置" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#11000000" />

        <TextView
