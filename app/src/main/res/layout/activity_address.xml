<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hongaer.shoppingmall2.user.view.AddressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/ib_goods_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/top_bar_left_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="添加收货地址"
                android:textColor="#000000"
                android:textSize="20sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#11000000" />
        <EditText
            android:id="@+id/et_received"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:padding="20dp"
            android:background="@null"
            android:hint="收货人:"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#eeee" />
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:padding="20dp"
            android:background="@null"
            android:hint="手机号码:"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#eeee" />
        <EditText
            android:id="@+id/et_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:padding="20dp"
            android:background="@null"
            android:hint="所在地区:"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#eeee" />
        <EditText
            android:id="@+id/et_more_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:padding="20dp"
            android:background="@null"
            android:hint="详细地址:"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#eeee" />
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:orientation="horizontal">
             <TextView
                 android:id="@+id/consignee_setdefault_txtv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center_vertical|left"
                 android:textSize="18sp"
                 android:text="设为默认地址："
                 android:paddingTop="20dp"
                 android:paddingLeft="20dp"
                 android:layout_alignParentLeft="true"
                 style="@style/textStyle.Normal.black"/>
                <Switch
                    android:id="@+id/consignee_setdefault_sth"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_space"/>

         </RelativeLayout>


        <Button
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button"
            android:text="确认保存"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_selector"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/margin_space_big"
            android:layout_marginRight="@dimen/margin_space_big"
            android:layout_marginTop="@dimen/margin_space_big"/>

    </LinearLayout>



</RelativeLayout>