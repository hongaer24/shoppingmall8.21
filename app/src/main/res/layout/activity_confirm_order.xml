<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hongaer.shoppingmall2.shoppingcart.view.ConfirmOrderActivity">

     <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="10dp">

         <ImageButton
             android:id="@+id/ib_goods_back"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/top_bar_left_back" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:text="确认订单"
             android:textColor="#000000"
             android:textSize="20sp" />
     </RelativeLayout>

     <View
         android:layout_width="match_parent"
         android:layout_height="18dp"
         android:background="#11000000" />

    <FrameLayout
         android:layout_width="match_parent"
         android:layout_height="60dip">
     <ImageView
         android:layout_marginLeft="@dimen/margin_space"
         android:layout_marginBottom="@dimen/margin_space"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/icon_location"
         android:layout_gravity="bottom"/>

         <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_marginLeft="30dip"
             android:layout_marginRight="33dip">

             <TextView
                 android:id="@+id/tv_receive"
                 android:layout_width="wrap_content"
                 android:layout_height="42dp"
                 android:layout_alignParentLeft="true"
                 android:padding="12dp"
                 android:text="收件人:"
                 android:layout_alignParentTop="true"
                 android:textColor="#000000"
                 android:textSize="16dp" />　

             　　
             <TextView
                 android:id="@+id/tv_raddress"
                 android:layout_width="wrap_content"
                 android:layout_height="42dp"
                 android:layout_alignParentLeft="true"
                 android:padding="12dp"
                 android:text="收货地址:"
                 android:layout_alignParentBottom="true"
                 android:textColor="#000000"
                 android:textSize="16dp" />　
         </RelativeLayout>


           <ImageButton
                android:id="@+id/ib_goods_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/home_arrow_right"
               android:layout_gravity="right|center_vertical"/>
     </FrameLayout>

       <View
           android:layout_width="match_parent"
           android:layout_height="6dp"
           android:background="#11000000" />

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="420dip">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
              <ExpandableListView
                  android:id="@+id/exListView"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:childIndicator="@null"
                  android:groupIndicator="@null" >
              </ExpandableListView>

          </LinearLayout>
         </FrameLayout>

              <LinearLayout
                  android:id="@+id/ll_check_all"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#fff"
                  android:orientation="horizontal"
                  android:visibility="visible">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="10dp"
                      android:layout_marginLeft="110dp"
                      android:text="实付:"
                      android:textColor="#303235"
                      android:textSize="15sp" />
                  <TextView
                      android:id="@+id/tv_shopcart_total"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:padding="10dp"
                      android:layout_marginLeft="20dp"
                      android:text="￥0.00"
                      android:textColor="#ed3f3f"
                      android:textSize="15sp" />
                  <Button
                      android:id="@+id/btn_check_out"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="#ed3f3f"
                      android:text="提交订单"
                      android:textColor="#fff" />

              </LinearLayout>
          </LinearLayout>



     </LinearLayout>



