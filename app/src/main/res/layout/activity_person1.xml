<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hongaer.shoppingmall2.user.view.PersonActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/ib_goods_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/top_bar_left_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人资料"
            android:textColor="#000000"
            android:textSize="20sp" />
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#11000000" />
         <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/tv_icon"
                 android:layout_width="wrap_content"
                 android:layout_height="40dp"
                 android:layout_alignParentLeft="true"
                 android:drawablePadding="280dp"
                 android:drawableRight="@drawable/home_arrow_right"
                 android:padding="10dp"
                 android:text="头像"
                 android:textColor="#131212"
                 android:textSize="17dp" />　

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/main_user_press"
               android:layout_marginRight="50dp"
             android:layout_alignParentRight="true"/>
         </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#11000000" />
          <RelativeLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
              <TextView
                  android:id="@+id/tv_nick"
                  android:layout_width="wrap_content"
                  android:layout_height="42dp"
                  android:layout_alignParentLeft="true"
                  android:drawablePadding="280dp"
                  android:drawableRight="@drawable/home_arrow_right"
                  android:padding="12dp"
                  android:text="昵称"
                  android:textColor="#000000"
                  android:textSize="16dp" />　
              <TextView
                  android:id="@+id/tv_nick1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingTop="13dp"
                  android:text="鱼罐头"
                  android:layout_marginRight="42dp"
                  android:layout_alignParentRight="true"
                  android:textSize="14dp"
                  android:textColor="#000000"/>

          </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#11000000" />
         <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/tv_sex"
                 android:layout_width="wrap_content"
                 android:layout_height="42dp"
                 android:layout_alignParentLeft="true"
                 android:drawablePadding="280dp"
                 android:drawableRight="@drawable/home_arrow_right"
                 android:padding="12dp"
                 android:text="性别"
                 android:textColor="#000000"
                 android:textSize="16dp" />　

             <TextView
                 android:id="@+id/tv_sex1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingTop="13dp"
                 android:text="男"
                 android:layout_marginRight="42dp"
                 android:layout_alignParentRight="true"
                 android:textSize="14dp"
                 android:textColor="#000000"
                 />

         </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#11000000" />
        </LinearLayout>
</LinearLayout>
